<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_my_msg_item_addFriendResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_my_msg_item_addFriendResult"
            style="@style/context_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_sth" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_my_msg_item_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/tv_my_msg_item_chatContent"
            style="@style/context_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_sth" />

        <Button
            android:id="@+id/button1"
            style="@style/context_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_chat" />
    </LinearLayout>


</LinearLayout>
